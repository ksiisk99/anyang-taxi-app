<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/createroom_linear_width"
    android:layout_height="@dimen/report_linear_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/createroom_padding"
    android:layout_gravity="center"
    android:background="@color/colorBackground">

    <TextView
        android:fontFamily="@font/font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_17ssp"
        android:text="@string/report_1"
        android:textColor="#FF0000"
        android:gravity="center"
        android:id="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        ></TextView>
    <TextView
        android:fontFamily="@font/font"
        android:layout_width="match_parent"
        android:layout_height="@dimen/report_dialog_height"
        android:text="@string/report_2"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:gravity="center"
        android:id="@+id/content"
        ></TextView>
    <EditText
        android:fontFamily="@font/font"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:id="@+id/report_name"
        android:hint="@string/report_3"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintTop_toBottomOf="@+id/content"
        android:background="@drawable/edittext_bg"
        android:paddingStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:inputType="text"
        android:maxLength="8"
        ></EditText>
    <EditText
        android:fontFamily="@font/font"
        android:layout_width="match_parent"
        android:layout_height="@dimen/signup_height"
        android:id="@+id/report_time"
        android:hint="@string/report_4"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintTop_toBottomOf="@+id/report_name"
        android:background="@drawable/edittext_bg"
        android:paddingStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:inputType="text"
        android:maxLength="20"
        ></EditText>
    <EditText
        android:fontFamily="@font/font"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_67sdp"
        android:id="@+id/report_content"
        android:hint="@string/report_5"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintTop_toBottomOf="@+id/report_time"
        android:lines="5"
        android:maxLength="100"
        android:background="@drawable/edittext_bg"
        android:paddingStart="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:inputType="textMultiLine"
        ></EditText>
    <Button
        android:fontFamily="@font/font"
        android:layout_width="@dimen/_93sdp"
        android:layout_height="@dimen/_38sdp"
        android:id="@+id/report_cancel"
        app:layout_constraintTop_toBottomOf="@+id/report_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/logout_2"
        android:textColor="@color/colorBtn"
        android:background="@drawable/signup_btn_bg"
        ></Button>
    <Button
        android:fontFamily="@font/font"
        android:layout_width="@dimen/_93sdp"
        android:layout_height="@dimen/_38sdp"
        android:id="@+id/report_send"
        app:layout_constraintTop_toBottomOf="@+id/report_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/logout_3"
        android:textColor="@color/colorWhite"
        android:background="@drawable/main_btn_bg"
        ></Button>






</androidx.constraintlayout.widget.ConstraintLayout>